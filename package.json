{
  "name": "arreglame-ya-monorepo",
  "version": "1.0.0",
  "description": "Marketplace de jardinería con IA y Geolocalización",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/mobile-app"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "npm run start:dev -w apps/api",
    "start:web": "npm run dev -w apps/mobile-app",
    "build": "npm run build -w apps/api && npm run build -w apps/mobile-app",
    "build:api": "npm run build -w apps/api",
    "build:web": "npm run build -w apps/mobile-app",
    "dev": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f",
    "db:migrate": "npm run prisma:migrate -w apps/api",
    "db:migrate:deploy": "npm run prisma:migrate:deploy -w apps/api",
    "db:generate": "npm run prisma:generate -w apps/api",
    "db:studio": "npm run prisma:studio -w apps/api",
    "db:seed": "npm run prisma:seed -w apps/api",
    "lint": "npm run lint -w apps/api && npm run lint -w apps/mobile-app",
    "test": "npm run test -w apps/api",
    "test:e2e": "npm run test:e2e -w apps/api",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint-config-next": "^16.1.1",
    "typescript": "^5.3.3"
  }
}
